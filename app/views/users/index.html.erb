<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Birth date</th>
      <th>Guardian</th>
      <th>Email</th>
      <th>Password</th>
      <th>Encrypted password</th>
      <th>Contact</th>
      <th>Created at</th>
      <th>Deleted at</th>
      <th>Last sign in</th>
      <th>Current sign in</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.gender %></td>
        <td><%= user.birth_date %></td>
        <td><%= user.guardian %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.contact %></td>
        <td><%= user.created_at %></td>
        <td><%= user.deleted_at %></td>
        <td><%= user.last_sign_in %></td>
        <td><%= user.current_sign_in %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

